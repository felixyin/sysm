extends ../../layout_nomenu


block content

    .main-content
        .page-content
            form#search-form-id
                table.searchTable
                    tr
                        td 条码编号
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='barcode_long')
                        td Qubit浓度(ng/ul)
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='extract_qbite_deep')
                        td epoch浓度(ng/ul)
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='extract_epoch_deep')
                    tr
                        td 纯度(%)
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='extract_purity_deep')
                        td 片段大小(bp)
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='extract_part_size')
                        td 打断后片段(bp)
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='extract_part_after_break')
                    tr
                        td 提取人员
                        td
                            input.col-xs-10.col-sm-5.ipt-person(type='text' , name='extracter')
                        td 提取时间
                        td
                            input.col-xs-10.col-sm-5.ipt-date(type='text' , name='extract_date')
                        td 提取审核人
                        td
                            input.col-xs-10.col-sm-5.ipt-person(type='text' , name='extract_checker')
                    tr
                        td 提取审核时间
                        td
                            input.col-xs-10.col-sm-5.ipt-date(type='text' , name='extract_check_date')
                        td 提取出库人
                        td
                            input.col-xs-10.col-sm-5.ipt-person(type='text' , name='extract_outer')
                        td 提取组样本剩余量
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='extract_out_residue')
                    tr
                        td 状态
                        td
                            select#status.col-xs-12.clo-sm-10(style="width:180px;", name='status',placeholder='')
                                option(value='-1') 全部
                                option(value='4') 未提取
                                option(value='5') 已提取
                                option(value='6') 合格
                                option(value='7') 废弃
                                option(value='8') 重提取
                                option(value='9') 已交接
                        td
                        td
                        td
                        td
                            #btn-search.btn-group
                                button.btn.btn-info.btn-sm(type='submit')
                                    i.icon.iconfont.icon-chaxun.bigger-110 &nbsp;&nbsp;搜&nbsp;索
                                button.btn.btn-info.dropdown-toggle.btn-sm(data-toggle='dropdown')
                                    i.icon-angle-down.icon-only
                                ul.dropdown-menu.dropdown-yellow
                                    li
                                        a#btn-search-more(href='javascript:void(0);') 显示更多搜索项
                            button.btn.btn-sm(type='reset')
                                i.icon.iconfont.icon-qingchu.bigger-110

            div.my-toolbar
                #btn-cxd.btn-group
                    button.btn.btn-info.btn-sm(onclick="showEditDialog(this)")
                        i.icon.iconfont.icon-luru.bigger-110 &nbsp;&nbsp;录入DNA提取信息
                    button.btn.btn-info.dropdown-toggle.btn-sm(data-toggle='dropdown')
                        i.icon-angle-down.icon-only
                    ul.dropdown-menu.dropdown-yellow
                        li
                            a(href='javascript:clearUser("DNA提取录入人员")') 不记住DNA提取录入人员
                        //li
                            a(href='#') Separated link
                span
                #btn-sh.btn-group
                    button.btn.btn-info.btn-sm(onclick="showShDialog(this)",disabled)
                        i.icon.iconfont.icon-shenhe.bigger-110 &nbsp;&nbsp;&nbsp;审核
                    button.btn.btn-info.dropdown-toggle.btn-sm(data-toggle='dropdown',disabled)
                        i.icon-angle-down.icon-only
                    ul.dropdown-menu.dropdown-yellow
                        li
                            a(href='javascript:clearUser("审核人员")') 不记住审核人员
                span
                //button#btn-rk-id.btn.btn-info.btn-sm(onclick="rk(this)")
                    i.icon-inbox.bigger-110 入库
                #btn-ck.btn-group
                    button.btn.btn-info.btn-sm(onclick="showCkDialog(this)")
                        i.icon.iconfont.icon-outstock.bigger-110 &nbsp;&nbsp;&nbsp;批量出库
                    button.btn.btn-info.dropdown-toggle.btn-sm(data-toggle='dropdown')
                        i.icon-angle-down.icon-only
                    ul.dropdown-menu.dropdown-yellow
                        li
                            a(href='javascript:clearUser("出库人员")') 不记住出库人员
                        li
                            a(href='javascript:clearUser("交接人员")') 不记住交接人员
                span
                button#btn-dc-id.btn.btn-info.btn-sm(onclick="exportCvs(this)")
                    i.icon.iconfont.icon-x-xlsx.bigger-110 导出EXCEL
                //button#btn-dy-id.btn.btn-info.btn-sm(onclick="dy(this)")
                    i.icon-print.bigger-110 打印
                span
                    label.pull-right.inline(style="margin-top:10px;")
                        small.muted 表格显示模式:
                        input#id-button-borders.ace.ace-switch.ace-switch-5(checked="", type="checkbox", onclick="switchTableModel(this)")
                        span.lbl

            table#grid-table
            #grid-pager
    script(type='text/javascript',src="javascripts/dna/extract.js")
