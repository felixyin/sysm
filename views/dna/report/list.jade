extends ../../layout_nomenu


block content

    style.
        .my-toolbar > .btn-group, .my-toolbar > button {
            margin-right: 10px;
        }

        .btn-group > .btn-sm, .btn-group + .btn-sm {
            border-width: 4px;
        }

    .main-content
        .page-content
            form#search-form-id
                table.searchTable
                    tr
                        td 条码编号
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='barcode_long', placeholder='请输入条码编号')
                        td 分析报告组接收人
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='report_handover', placeholder='请输入分析报告组接收人')
                        td 分析报告组接收时间
                        td
                            input.col-xs-10.col-sm-5.ipt-date(type='text' , name='report_handover_date', placeholder='请输入分析报告组接收时间')
                    tr
                        td 分析结果
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='report_result', placeholder='请输入分析结果')
                        td 建议
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='report_advice', placeholder='请输入建议')
                        td 是否发送
                        td
                            select.col-xs-12.clo-sm-10(style="width:180px;", name='report_is_send', placeholder='')
                                option(value='') 全部
                                option(value='1') 发送
                                option(value='2') 不发送
                    tr
                        td 分析人
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='reporter', placeholder='请输入分析人')
                        td 分析时间
                        td
                            input.col-xs-10.col-sm-5.ipt-date(type='text' , name='report_date', placeholder='请输入分析时间')
                        td 报告发送人
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='report_sender', placeholder='请输入报告发送人')
                    tr
                        td 报告发送时间
                        td
                            input.col-xs-10.col-sm-5.ipt-date(type='text' , name='report_send_date', placeholder='请输入报告发送时间')
                        td 上机芯片编码
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='operate_chip_code', placeholder='请输入上机芯片编码')
                        td 上机reads数
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='operate_reads_val', placeholder='请输入上机reads数')
                    tr
                        td 上机q30值
                        td
                            input.col-xs-10.col-sm-5(type='text' , name='operate_q30_val', placeholder='请输入上机q30值')
                        td 状态
                        td
                            select#status.col-xs-12.clo-sm-10(style="width:180px;", name='status',placeholder='')
                                option(value='-1') 全部
                                option(value='19') 未分析
                                option(value='20') 已分析
                                option(value='21') 报告已发送
                        td
                        td
                            #btn-search.btn-group
                                button.btn.btn-info.btn-sm(type='submit')
                                    i.icon-edit.bigger-110 &nbsp;&nbsp;&nbsp;搜索
                                button.btn.btn-info.dropdown-toggle.btn-sm(data-toggle='dropdown')
                                    i.icon-angle-down.icon-only
                                ul.dropdown-menu.dropdown-yellow
                                    li
                                        a#btn-search-more(href='javascript:void(0);') 显示更多搜索项
                            button.btn.btn-sm(type='reset')
                                i.icon-undo.bigger-110 重置

            div.my-toolbar
                #btn-cxd.btn-group
                    button.btn.btn-info.btn-sm(onclick="showEditDialog(this)")
                        i.icon-edit.bigger-110 &nbsp;&nbsp;&nbsp;录入分析报告信息
                    button.btn.btn-info.dropdown-toggle.btn-sm(data-toggle='dropdown')
                        i.icon-angle-down.icon-only
                    ul.dropdown-menu.dropdown-yellow
                        li
                            a(href='javascript:clearUser("分析报告录入人员")') 不记住分析报告录入人员
                        //li
                            a(href='#') Separated link
                span
                #btn-fs.btn-group
                    button.btn.btn-info.btn-sm(onclick="showFsDialog(this)",disabled)
                        i.icon-edit.bigger-110 &nbsp;&nbsp;&nbsp;发送
                    button.btn.btn-info.dropdown-toggle.btn-sm(data-toggle='dropdown',disabled)
                        i.icon-angle-down.icon-only
                    ul.dropdown-menu.dropdown-yellow
                        li
                            a(href='javascript:clearUser("发送人员")') 不记住发送人员
                span
                #btn-sh.btn-group.hide
                    button.btn.btn-info.btn-sm(onclick="showShDialog(this)",disabled)
                        i.icon-edit.bigger-110 &nbsp;&nbsp;&nbsp;审核
                    button.btn.btn-info.dropdown-toggle.btn-sm(data-toggle='dropdown',disabled)
                        i.icon-angle-down.icon-only
                    ul.dropdown-menu.dropdown-yellow
                        li
                            a(href='javascript:clearUser("审核人员")') 不记住审核人员
                span
                //button#btn-rk-id.btn.btn-info.btn-sm(onclick="rk(this)")
                    i.icon-inbox.bigger-110 入库
                #btn-ck.btn-group.hide
                    button.btn.btn-info.btn-sm(onclick="showCkDialog(this)")
                        i.icon-edit.bigger-110 &nbsp;&nbsp;&nbsp;批量出库
                    button.btn.btn-info.dropdown-toggle.btn-sm(data-toggle='dropdown')
                        i.icon-angle-down.icon-only
                    ul.dropdown-menu.dropdown-yellow
                        li
                            a(href='javascript:clearUser("出库人员")') 不记住出库人员
                        li
                            a(href='javascript:clearUser("交接人员")') 不记住交接人员
                span
                button#btn-dc-id.btn.btn-info.btn-sm(onclick="exportCvs(this)")
                    i.icon-download-alt.bigger-110 导出EXCEL
                //button#btn-dy-id.btn.btn-info.btn-sm(onclick="dy(this)")
                    i.icon-print.bigger-110 打印
                span
                    label.pull-right.inline(style="margin-top:10px;")
                        small.muted 表格显示模式:
                        input#id-button-borders.ace.ace-switch.ace-switch-5(checked="", type="checkbox", onclick="switchTableModel(this)")
                        span.lbl
                        
            table#grid-table
            #grid-pager
    script(type='text/javascript',src="javascripts/dna/report.js")
